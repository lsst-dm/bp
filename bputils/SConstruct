# -*- python -*-
#
# Setup our environment
#
import glob, os.path, re, os
import lsst.scons.SConsUtils as scons

env = scons.makeEnv("bputils",
                    r"$HeadURL$",
                    scons.ConfigureDependentProducts("bputils"))

env.Append(CXXFLAGS="-std=c++0x")

#
# Build/install things
#
for d in Split("lib tests python/lsst/bputils doc"):
    SConscript(os.path.join(d, "SConscript"))

env['IgnoreFiles'] = r"(~$|\.pyc$|^\.svn$|\.o$)"

env.InstallLSST(env['prefix'], ["python", "etc", "include", "lib", "ups", "doc"])

scons.CleanTree(r"*~ core *.so *.os *.o")

#
# Build TAGS files
#
files = scons.filesToTag()
if files:
    env.Command("TAGS", files, "etags -o $TARGET $SOURCES")

env.Declare()
env.Help("""
LSST Boost.Python utilities package
""")

