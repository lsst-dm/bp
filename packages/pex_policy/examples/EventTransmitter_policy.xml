<!-- 
  -  NOTE:  XML format support is not yet supported!!
  -->
<!-- this is a comment -->
<Policy target="EventTransmitter" pversion="1.0">

   <!-- 
     -  the 't' attribute gives the type.  The type might be provided by 
     -  an external dictionary.  With no dictionary and no t attribute, 
     -  string is assumed.  
     -->
   <standalone t="b"> true </standalone>

   <threshold t="d"> 4.5 </threshold>

   <!--
     -  array values are either space-delimited on a line or given in
     -  repeated occurrence of the parameter name.  Currently, only 1-D
     -  arrays are supported.
     -->
   <offsets> 1 14 39 93 21 </offsets>
   <offsets>  3 99 313     </offsets>

   <receiver>
      <logVerbosity> debug </logVerbosity>
   </receiver>
   <transmitter>
      <logVerbosity> debug </logVerbosity>
      <serializationFormat> deluxe </serializationFormat>
   </transmitter>
</Policy>
